<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="5dp"
    app:rd_enable="true"
    app:rd_style="@style/Material.Drawable.Ripple.Wave"
    android:paddingRight="5dp"
    android:paddingTop="20dp">

    <com.rey.material.widget.ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp" />

    <com.rey.material.widget.Switch
        android:id="@+id/switcher"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="false"
        app:sw_thumbRadius="15dp"
        app:sw_trackColor="@color/switchstyle"
        app:sw_trackSize="15dp" />

    <com.rey.material.widget.TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imageView"
        android:maxWidth="200dp"
        android:text="Name des Benckers"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="15sp" />

    <com.rey.material.widget.TextView
        android:id="@+id/absender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/imageView"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="?android:attr/textColorSecondary"
        android:text="Inhalt" />

    <com.rey.material.widget.ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/switcher" />


</com.rey.material.widget.RelativeLayout>